@using Ticket_Management.DAL.Model
@{
    ViewData["Title"] = "Create Account";
}

@model Customer
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        body {
            display: block;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: #f8fafc;
            margin: 0;
        }

        .card {
            max-width: 420px;
            width: 100%;
            padding: 2.5rem 3rem;
            margin-right: 30%;
            margin-left: 35%;
            margin-top: 6%;
        }
    </style>
</head>
<body>
    <div class="card text-center shadow">
        <form asp-action="CreateAccount" method="post">
            <h1 class="display-6 mb-4">Sign Up</h1>

            <div class="mb-3">
                <input asp-for="FullName" type="text" class="form-control" placeholder="Full Name" required>
            </div>
            <div class="mb-3">
                <input asp-for="MobileNumber" type="text" class="form-control" placeholder=" Mobile Number" required>
            </div>
            <div class="mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="mb-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Create Account</button>
        </form>

 
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
