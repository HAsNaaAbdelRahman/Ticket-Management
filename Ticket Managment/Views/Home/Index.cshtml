@{
    ViewData["Title"] = "Home Page";
}
@using Ticket_Management.DAL.DTOs.Incoming   
@model LoginDto

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        body {
            display: block;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: #f8fafc;
            margin: 0;
        }

        .card {
            max-width: 420px;
            width: 100%;
            padding: 2.5rem 3rem;
            margin-right: 30%;
            margin-left: 35%;
            margin-top: 6%;
        }
    </style>
</head>
<body>
    <div class="card text-center shadow">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <h1 class="display-6 mb-4">Sign In</h1>

            <div class="mb-3">
                <input asp-for ="Email" type="email" class="form-control" placeholder="Email" required>
            </div>

            <div class="mb-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <p class="mt-3 mb-1 small">
            Don't have an account? <a asp-action="CreateAccount">Create&nbsp;Account</a>
        </p>
        <p class="mb-0 small"><a asp-action="ForgetPassword">Forgot&nbsp;Password?</a></p>
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
